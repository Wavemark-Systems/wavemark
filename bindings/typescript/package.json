{
  "name": "wavemark-typescript",
  "version": "0.1.0",
  "description": "TypeScript/WebAssembly bindings for Wavemark audio watermarking library",
  "main": "pkg/wavemark_typescript.js",
  "types": "pkg/wavemark_typescript.d.ts",
  "files": [
    "pkg/",
    "README.md"
  ],
  "scripts": {
    "build": "wasm-pack build --target web --out-dir pkg",
    "build:node": "wasm-pack build --target nodejs --out-dir pkg-node",
    "build:bundler": "wasm-pack build --target bundler --out-dir pkg-bundler",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/ tests/ examples/",
    "lint:fix": "eslint src/ tests/ examples/ --fix",
    "format": "prettier --write src/ tests/ examples/",
    "clean": "rm -rf pkg/ pkg-node/ pkg-bundler/"
  },
  "keywords": [
    "audio",
    "watermarking",
    "ai",
    "voice",
    "typescript",
    "wasm",
    "webassembly"
  ],
  "author": "Wavemark Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/wavemark.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/wavemark/issues"
  },
  "homepage": "https://github.com/your-org/wavemark#readme",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0",
    "wasm-pack": "^0.12.0"
  },
  "dependencies": {
    "js-sys": "^0.3.0",
    "web-sys": "^0.3.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  }
}
